<%= form_for(@book, :html => {:class => "form-horizontal"}) do |f| %>
  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" placeholder="Title">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" class="form-control" id="author" placeholder="Author">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" class="form-control" id="genre" placeholder="Genre">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" class="form-control" id="img_link" placeholder="Image Link">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" class="form-control" id="amazon_link" placeholder="Amazon Link">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <textarea class="form-control" rows="10" id="text" placeholder="Text of Page One"></textarea>
    </div>
  </div>
      
  <div id="button4">
    <input class="btn-default btn" type="submit" value="Submit" id="submit">
  </div>
<% end %>


