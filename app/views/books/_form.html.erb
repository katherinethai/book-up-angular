<% if @book.errors.any? %>
  <div id="error_explanation"> 
    <% @book.errors.full_messages.each do |msg| %>
      <h3><%= msg %></h3>
    <% end %>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %><br><br>
  </div>
  
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %><br><br>
  </div>

  <div class="field">
    <%= f.label :genre %><br>
    <%= f.text_field :genre %><br><br>
  </div>

  <div class="field">
    <%= f.label :image_link %><br>
    <%= f.text_field :img_link %><br><br>
  </div>

  <div class="field">
    <%= f.label :amazon_link %><br>
    <%= f.text_field :amazon_link %><br><br>
  </div>

  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text, rows: 10, cols: 40 %>
  </div>

  <br>

  <div class="actions">
    <input type="submit" id="submit" class="btn btn-default" value="Submit">
  </div>

<% end %>



